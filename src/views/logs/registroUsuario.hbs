{{guardarValor false}}
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center bg-dark">
                <div class="card-header">
                    <h3>Registro</h3>
                </div>

                <div class="card-body">
                    <form action="/registroUsuario" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="nombre_user" placeholder="Ingrese nombre" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="apellido_user" placeholder="Ingrese apellido">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="targeta_user" placeholder="Ingrese número de targeta">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="dir_user" placeholder="Ingrese su dirección">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="tel_user" placeholder="Ingrese número de teléfono">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="cedula_user" placeholder="Ingrese número de cedula">
                        </div>

                        <hr>

                        <div class="form-group">
                            <input type="text" class="form-control" name="username_user" placeholder="Ingrese el username">
                        </div>

                        <div class="form-group">
                            <input type="password" class="form-control" name="pass_user" placeholder="Ingrese contraseña">
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success btn-block">¡Crear cuenta!</button>
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>