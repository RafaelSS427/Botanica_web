<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card bg-dark">
                <div class="card-body text-center">
                    <form action="/consultaCategoria" method="POST">
                        <div class="form-group">
                            <select class="form-control" name="id_cp2">
                                <option value="0">Todos</option>
                                {{#each categorias}}
                                <option value="{{id_cp}}">{{nombre_cp}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-outline-primary form-control">Filtrar</button>
                        </div>

                        <a href="/agregarProducto"> <em>¡Agregar nuevo producto!</em> </a>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        {{#each producto}}
        <div class="col-md-4 mx-auto m-4 p-1">
            <div class="card text-center bg-dark">
                <div class="card-body">

                    <div class="form-group">
                        <h3 class="card-title text-uppercase">
                            {{nombre_producto}}
                        </h3>
                    </div>

                    <div class="form-group">
                        <img src="/img/productos/{{imagen_producto}}" height="200px" width="200px">
                    </div>

                    <div class="form-group">
                        <p>{{caracteristica_producto}}</p>
                    </div>

                    <div class="form-group">
                        <p>Precio: ₡{{precio}}</p>
                    </div>

                    <a class="btn btn-outline-primary" href="/editarProducto/{{id_producto}}">Editar</a>
                    <a class="btn btn-outline-danger" href="/eliminarProducto/{{id_producto}}">Eliminar</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>