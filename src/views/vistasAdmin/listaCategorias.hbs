<div class="container">
    <div class="row">
        {{#each categorias}}
        <div class="col-md-4 mx-auto p-4">
            <div class="card text-center bg-dark">
                <div class="card-body">

                    <div class="form-group">
                        <h3 class="card-title text-uppercase">
                            {{nombre_cp}}
                        </h3>
                    </div>

                    <div class="form-group">
                        <img src="/img/categorias/{{foto_cp}}" height="200px" width="200px">
                    </div>

                    <div class="form-group">
                        <p>{{desc_cp}}</p>
                    </div>

                    <a class="btn btn-outline-primary" href="/editarCategoria/{{id_cp}}">Editar</a>
                    <a class="btn btn-outline-danger" href="/eliminarCategoria/{{id_cp}}">Eliminar</a>

                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>