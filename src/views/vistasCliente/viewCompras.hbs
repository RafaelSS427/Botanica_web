{{guardarValor false}}
<div class="container p-4">
    <div class="row">
        <div class="col-md-12 text-center">
            <h3 style="color: white;">{{user.nombre_user}} estas son tus compras realizadas</h3>
        </div>
    </div>
</div>

<div class="container">
    <table class="table table-striped table-dark mx-auto">
        <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Targeta</th>
                <th scope="col">Cedula</th>
                <th scope="col">Producto</th>
                <th scope="col">Precio</th>
                <th scope="col">Fecha</th>
            </tr>
        </thead>
        <tbody>
            {{#each compras}}
            <tr>
                <td>{{username_user}}</td>
                <td>{{targeta_user}}</td>
                <td>{{cedula_user}}</td>
                <td>{{nombre_producto}}</td>
                <td>{{precio}}</td>
                <td>{{parsearFecha fecha_compra}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<div class="container p-4">
    <div class="row">
        <div class="col-md-12 text-center">
            <h3 style="color: white;">Monto total de compras: {{precioTotal}}</h3>
        </div>
    </div>
</div>