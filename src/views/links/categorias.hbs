{{guardarValor estado}}
<div class="container">
    <div class="row">
        {{#each categorias}}
            <div class="col-md-4 mx-auto p-4">
                <div class="card text-center bg-dark">
                    <div class="card-body">
                        
                            <div class="form-group">
                                <h3 class="card-title text-uppercase">
                                    {{nombre_cp}}
                                </h3>
                            </div>

                            <div class="form-group">
                                <a href="/productos/{{id_cp}}">
                                    <img src="/img/categorias/{{foto_cp}}" height="200px" width="200px">
                                </a>
                            </div>

                            <div class="form-group">
                                <p>{{desc_cp}}</p>
                            </div>
                        
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>