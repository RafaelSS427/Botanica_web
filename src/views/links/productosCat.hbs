{{#if estado}}
<div class="container">
    <div class="row">
        {{#each producto}}
        <div class="col-md-4 mx-auto m-4 p-1">
            <div class="card text-center bg-dark">
                <div class="card-body">

                    <div class="form-group">
                        <h3 class="card-title text-uppercase">
                            {{nombre_producto}}
                        </h3>
                    </div>

                    <div class="form-group">
                        <img src="/img/productos/{{imagen_producto}}" height="200px" width="200px">
                    </div>

                    <div class="form-group">
                        <p>{{caracteristica_producto}}</p>
                    </div>

                    <div class="form-group">
                        <p>Precio: â‚¡{{precio}}</p>
                    </div>

                    {{#if (obtenerValorUsuario)}}

                    <div class="form-group">
                        <a href="/compraProducto/{{id_producto}}" class="btn btn-success btn-block">Comprar</a>
                    </div>

                    {{else}}

                    <div class="form-group">
                        <a href="/loginUser" class="btn btn-success btn-block">Comprar</a>
                    </div>

                    {{/if}}

                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

{{else}}
<div class="container p-4">
        <div class="row">
            <div class="col-md-4 mx-auto">
                <div class="alert alert-dark alert-dismissible fade show" role="alert">
                    <h5>Producto no encontrado</h5>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
{{/if}}